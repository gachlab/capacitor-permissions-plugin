{
  "name": "@gachlab/capacitor-permissions",
  "version": "2.0.3",
  "type": "module",
  "description": "A plugin to monitor different permissions",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "GachlabCapacitorPermissions.podspec"
  ],
  "author": "Guillermo Carrillo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gachlab/capacitor-permissions-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/gachlab/capacitor-permissions-plugin/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api DevicePermissionsPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && vite build",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.4.2",
    "@eslint/js": "^9.31.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "prettier-plugin-java": "^2.7.3",
    "rimraf": "^6.0.1",
    "swiftlint": "^2.0.0",
    "typescript": "~5.8.3",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "rxjs": "^7.8.2"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
